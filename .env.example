# Configuración de desarrollo - NO subir a producción
# Copiar este archivo como .env y configurar con valores reales

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_USER=root
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=finca_db

# === SEGURIDAD ===
# IMPORTANTE: Generar una clave secreta fuerte para JWT
# Puedes usar: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=tu_clave_secreta_super_segura_aqui

# === CONFIGURACIÓN DE ENTORNO ===
FLASK_ENV=development
DEBUG=true

# === SSL/HTTPS ===
USE_HTTPS=true
SSL_CERT_FILE=certs/127.0.0.1-cert.pem
SSL_KEY_FILE=certs/127.0.0.1-key.pem

# === CONFIGURACIÓN DE JWT ===
JWT_COOKIE_DOMAIN=localhost
JWT_COOKIE_SECURE=false

# === CORS ===
# Puedes usar formato JSON (recomendado) o CSV
# JSON:
# CORS_ORIGINS=["https://localhost:5173","http://localhost:5173","https://localhost:5175"]
# CSV:
CORS_ORIGINS=https://localhost:5173,http://localhost:5173,https://localhost:5175
# Extras (se fusionan con CORS_ORIGINS):
# JSON:
# CORS_EXTRA_ORIGINS=["https://localhost:5175","https://mifinca.isladigital.xyz"]
# CSV:
# CORS_EXTRA_ORIGINS=https://localhost:5175,https://mifinca.isladigital.xyz

# === CONFIGURACIÓN DE SERVIDOR ===
PORT=8081

# === RATE LIMITING ===
RATE_LIMIT_STORAGE_URI=memory://

# === LOGGING ===
LOG_LEVEL=INFO
SECURITY_LOG_ENABLED=true

# === URLs (desarrollo) ===
API_BASE_URL=https://localhost:8081/api/v1
FRONTEND_URL=https://localhost:5173
BACKEND_URL=https://localhost:8081

# === CONFIGURACIÓN DE CONTENIDO ===
MAX_CONTENT_LENGTH=16777216
