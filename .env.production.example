# Configuración de producción
# IMPORTANTE: Configurar todos estos valores para producción

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_USER=tu_usuario_bd
DB_PASSWORD=tu_password_super_seguro
DB_HOST=tu_host_bd
DB_PORT=3306
DB_NAME=finca_db_prod

# === SEGURIDAD CRÍTICA ===
# OBLIGATORIO: Generar una clave secreta única y fuerte
# Usar: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CAMBIAR_POR_CLAVE_SECRETA_UNICA_DE_64_CARACTERES

# === CONFIGURACIÓN DE ENTORNO ===
FLASK_ENV=production
DEBUG=false

# === SSL/HTTPS ===
USE_HTTPS=true
SSL_CERT_FILE=certs/cert.crt
SSL_KEY_FILE=certs/cert.key

# === CONFIGURACIÓN DE JWT PRODUCCIÓN ===
JWT_COOKIE_DOMAIN=.tudominio.com
JWT_COOKIE_SECURE=true

# === CORS (producción) ===
# Lista de orígenes permitidos. Usa formato JSON (recomendado) o CSV
# JSON (recomendado):
# CORS_ORIGINS=["https://app.tudominio.com","https://admin.tudominio.com"]
# CSV:
# CORS_ORIGINS=https://app.tudominio.com,https://admin.tudominio.com
# Extras (se fusionan con CORS_ORIGINS):
# JSON:
# CORS_EXTRA_ORIGINS=["https://admin.tudominio.com","https://otro.tudominio.com"]
# CSV:
# CORS_EXTRA_ORIGINS=https://admin.tudominio.com,https://otro.tudominio.com

# === CONFIGURACIÓN DE SERVIDOR ===
PORT=443

# === RATE LIMITING ===
# Usar Redis en producción para clustering
RATE_LIMIT_STORAGE_URI=redis://localhost:6379

# === LOGGING ===
LOG_LEVEL=WARNING
SECURITY_LOG_ENABLED=true

# === URLs (producción) ===
API_BASE_URL=https://api.tudominio.com/api/v1
FRONTEND_URL=https://app.tudominio.com
BACKEND_URL=https://api.tudominio.com

# === CONFIGURACIÓN DE CONTENIDO ===
MAX_CONTENT_LENGTH=8388608
